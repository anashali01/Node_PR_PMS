  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .bg-dark {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%) !important;
    }

    .auth-wrapper {
      width: 100%;
      height: 100vh;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 20px;
    }

    .auth-box {
      width: 100%;
      height: 100vh;
      display: flex !important;
      justify-content: center !important;
      align-items: center !important;
    }

    .card {
      width: 100%;
      max-width: 420px;
      padding: 40px;
      border-radius: 20px;
      background: rgba(255, 255, 255, 0.95);
      box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      text-align: left;
    }

    .title {
      margin-bottom: 15px;
      font-size: 32px;
      font-weight: 700;
      color: #667eea;
      text-align: center;
    }

    .field {
      margin-top: 18px;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 12px;
      background-color: #f8f9fa;
      border-radius: 10px;
      padding: 14px 16px;
      border: 2px solid #e0e0e0;
      transition: all 0.3s ease;
    }

    .field:focus-within {
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    .input-icon {
      height: 20px;
      width: 20px;
      fill: #667eea;
      flex-shrink: 0;
    }

    .input-field {
      background: none;
      border: none;
      outline: none;
      width: 100%;
      color: #333;
      font-size: 14px;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .input-field::placeholder {
      color: #999;
    }

    .btn {
      margin-top: 20px;
      width: 100%;
      border: none;
      border-radius: 10px;
      font-weight: 600;
      font-size: 16px;
      text-transform: uppercase;
      letter-spacing: 0.5px;
      padding: 14px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: #fff;
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
      transition: all 0.3s ease;
      cursor: pointer;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
    }

    .btn:active {
      transform: translateY(0);
    }

    .btn-link {
      color: #667eea;
      display: block;
      font-size: 14px;
      text-decoration: none;
      transition: color 0.3s ease-out;
      text-align: center;
      margin-top: 15px;
      font-weight: 600;
    }

    .btn-link:hover {
      color: #764ba2;
      text-decoration: underline;
    }

    .signup-text {
      font-size: 14px;
      color: #666;
      text-align: center;
      margin-top: 15px;
    }

    .signup-text a {
      color: #667eea;
      text-decoration: none;
      font-weight: 600;
      transition: color 0.3s ease;
    }

    .signup-text a:hover {
      color: #764ba2;
    }

    @media (max-width: 600px) {
      .card {
        padding: 30px 20px;
        max-width: 100%;
      }
      
      .title {
        font-size: 28px;
      }
    }
  </style>
