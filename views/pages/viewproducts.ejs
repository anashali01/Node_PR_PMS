<%- include('../partials/header.ejs')%>

  <style>
    /* Neumorphism table card â€” use theme background */


    .neo-card {
      width: 100%;
      border-radius: 12px;
      background: transparent;
      padding: 18px;
      box-shadow: 8px 8px 20px rgba(0, 0, 0, 0.04), -8px -8px 20px rgba(255, 255, 255, 0.6);
      border: 1px solid rgba(0, 0, 0, 0.04);
    }

    .neo-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      margin-bottom: 12px
    }

    .neo-title {
      font-size: 20px;
      font-weight: 700;
      color: #222
    }

    .avatar {
      width: 48px;
      height: 48px;
      border-radius: 8px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: #e6eef9;
      color: #2b4d8c;
      font-weight: 700;
      overflow: hidden;
    }

    /* constrain product thumbnails so they never grow and stretch layout */
    .table-clean td:first-child {
      width: 56px;
      white-space: nowrap;
    }

    .avatar img,
    .avatar-img,
    .table-clean img {
      width: 48px;
      height: 48px;
      max-width: 48px;
      max-height: 48px;
      border-radius: 6px;
      object-fit: cover;
      display: block;
      border-radius: 10px;
      box-shadow: inset 6px 6px 12px rgba(0, 0, 0, 0.03), inset -6px -6px 12px rgba(255, 255, 255, 0.6)
    }

    .neo-table tbody td {
      padding: 12px 14px;
      vertical-align: middle;
      border: none
    }

    .avatar {
      width: 64px;
      height: 64px;
      border-radius: 10px;
      display: inline-flex;
      align-items: center;
      justify-content: center;
      background: #e6eef9;
      color: #2b4d8c;
      font-weight: 700;
      overflow: hidden;
    }

    .avatar img {
      width: 100%;
      height: 100%;
      border-radius: 8px;
      object-fit: cover;
      display: block;
    }

    .badge-modern {
      padding: 6px 10px;
      border-radius: 999px;
      font-weight: 600;
      font-size: 12px;
      color: #fff
    }

    .badge-success {
      background: #5eea9a;
      color: #094
    }

    .badge-info {
      background: #6bc5ff
    }

    @media (max-width:800px) {
      .neo-table thead {
        display: none
      }

      .neo-table tbody td {
        display: block;
        padding: 10px
      }

      .neo-table tbody tr {
        margin-bottom: 12px
      }
    }
  </style>

  <div class="container">
    <div class="row">
      <div class="col-12">
        <div class="neo-wrap">
          <div class="main-panel">
            <div class="content-wrapper bg-transparent">
              <div class="neo-card">
                <div class="neo-header">
                  <div>
                    <div class="neo-title">Users</div>
                    <div class="neo-sub">Registered users list</div>
                  </div>
                </div>

                <div class="table-responsive">
                  <table class="neo-table table-clean">
                        <thead>
                          <tr>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Stock</th>
                            <th>Rating</th>
                            <th>Created</th>
                            <th>Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% if (products && products.length) { %>
                            <% products.forEach(function(p){ %>
                              <tr>
                                <td>
                                  <img src="<%= p.image || '/assets/images/samples/300x300/sample.jpg' %>" alt="" class="avatar-img" />
                                </td>
                                <td><%= p.name %></td>
                                <td><%= p.category ? p.category.name : '-' %></td>
                                <td>$<%= (p.price || 0).toFixed(2) %></td>
                                <td><%= p.stock || 0 %></td>
                                <td><%= p.rating || 0 %>/5</td>
                                <td><%= p.createdAt ? new Date(p.createdAt).toLocaleDateString() : '' %></td>
                                <td>
                                  <a href="/edit-product/<%= p._id %>" class="btn btn-sm btn-primary">Edit</a>
                                  <a href="/delete-product/<%= p._id %>" class="btn btn-sm btn-danger">Delete</a>
                                </td>
                              </tr>
                            <% }) %>
                          <% } else { %>
                            <tr><td colspan="8" class="text-center">No products found</td></tr>
                          <% } %>
                        </tbody>
                      </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('../partials/footer.ejs')%>